@model IEnumerable<WebStore.Models.Employee>

<div class="container">
        <h3>Employees of the shop</h3>
        <hr />

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Patronymic</th>
                    <th>Age</th>

                </tr>

            </thead>

            <tbody>
                @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-controller="Home" asp-action="EmployeInformation" asp-route-id="@employee.Id">
                            Edit
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>

        <p>
            <a asp-controller="Home" asp-action="Index"> Main </a>
        </p>
</div>